@using Ospedale.Models
@model List<MSSTU.DB.Utility.Entity>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div class="bg-dark-subtle shadow p-3 mb-2 rounded b1 border-subtle">
    <h1 class="text-primary bold">Medici</h1>
    <a class="btn btn-success w-25 d-flex align-center justify-center"
       href="/Medici/FormInserisci">
        <i class="ti ti-plus me-2"></i>
        Aggiungi medico
    </a>
</div>

<div class="divider my-3"></div>

<div class="features-grid scroll-y">
    @foreach (var entity in @Model)
    {
    var medico = (Medico)entity;
        <div class="card d-flex w-fit justify-center flex-col align-center gap-3">
            <div class="card-header text-body-subtle w-100">
                <i class="ti ti-burger"></i>
                @((medico.Primario ? "Primario" : "Medico"))
            </div>
            <div class="d-flex w-100 h-100 justify-center align-center">
                <img class="rounded" src="https://placehold.co/250x250" alt="@(medico.Nome)" />
            </div>
            <div class="card-body text-center">
                <div class="tag-group">
                    <div class="tag">Generalita: </div>
                    <div class="tag-text">@(medico.Nome) @(medico.Cognome)</div>
                </div>
            </div>
            <div class="d-flex gap-3 b1-top border-subtle w-100 p-2">
                <a class="btn btn-info w-100 d-flex align-center justify-center"
                   href="/Medici/Dettagli/@medico.Id">
                    <i class="ti ti-brand-github me-2"></i>
                    Dettagli
                </a>
                <a class="btn btn-danger w-100 d-flex align-center justify-center"
                   href="/Medici/Elimina/@medico.Id">
                    <i class="ti ti-trash me-2"></i>
                    Elimina
                </a>
                <a class="btn btn-warning w-100 d-flex align-center justify-center"
                   href="/Medici/FormModifica/@medico.Id">
                    <i class="ti ti-pencil me-2"></i>
                    Modifica
                </a>
            </div>
        </div>
    }
</div>
</body>
</html>
