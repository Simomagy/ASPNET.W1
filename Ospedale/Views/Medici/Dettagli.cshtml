@page
@model Ospedale.Views.Medici.Dettagli

@{
    Layout = "_Layout";
    var medico = (Medico)Model;
}

<!DOCTYPE html>

<html>
<head>
    <title> Benvenuto!</title>
</head>
<body>
<div class="d-flex w-100 h-100 justify-center align-center">
    <div class="card d-flex w-100 justify-center flex-col align-center gap-3">
        <div class="card-header text-body-subtle w-100">
            <i class="ti ti-medical-cross"></i>
            @(medico.Nome) @(medico.Cognome)
        </div>
        <div class="d-flex w-100 h-100 justify-center align-center">
            <img class="rounded" src="https://placehold.co/250x250" alt="@(medico.Nome)" />
        </div>
        <div class="card-body text-center">
            <div class="tag-group">
                <div class="tag">Data di nascita: </div>
                <div class="tag-text">
                    @(medico.Dob)
                </div>
            </div>
            <div class="tag-group">
                <div class="tag">Residenza: </div>
                <div class="tag-text">
                    @(medico.Residenza)

                </div>
            </div>
            <div class="tag-group">
                <div class="tag">Reparto: </div>
                <div class="tag-text">
                    @(medico.Reparto)
                </div>
            </div>
            <div class="tag-group">
                <div class="tag">Primario: </div>
                <div class="tag-text">
                    @(medico.Primario)
                </div>
            </div>
            <div class="tag-group">
                <div class="tag">Pazienti guariti: </div>
                <div class="tag-text">
                    @(medico.PazientiGuariti)
                </div>
            </div>
            <div class="tag-group">
                <div class="tag">Totale decessi: </div>
                <div class="tag-text">
                    @(medico.TotaleDecessi)
                </div>
            </div>
            <div class="tag-group">
                <div class="tag">Ospedale: </div>
                <div class="tag-text">
                    @(medico.Ospedale)
                </div>
            </div>
            @* <p class="text-body-subtle">@(((Panino)Model).Descrizione)</p> *@
        </div>
        <a class="card-footer w-100 hover-secondary d-flex align-center justify-center"
           href="/Medici/Lista">
            <i class="ti ti-chevrons-left me-2"></i>
            Indietro
        </a>
    </div>
</div>
</body>
</html>
