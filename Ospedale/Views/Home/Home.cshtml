@* @using Ospedale.Models *@
@model List<Ospedale.Models.Medico>

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>PeOne</title>

    <!-- load JS files -->
    <!-- jQuery (https://jquery.com/download/) -->
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script src="https://www.atlasestateagents.co.uk/javascript/tether.min.js"></script> <!-- Tether for Bootstrap, http://stackoverflow.com/questions/34567939/how-to-fix-the-error-error-bootstrap-tooltips-require-tether-http-github-h -->
    <script src="~/js/bootstrap.min.js"></script>   <!-- Bootstrap (http://v4-alpha.getbootstrap.com/) -->
    <!-- Linking SwiperJS script -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <!-- load stylesheets -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400">  <!-- Google web font "Open Sans" -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">                                      <!-- Bootstrap style -->
    <link rel="stylesheet" href="~/css/templatemo-style.css">                                   <!-- Templatemo style -->
    <!--<link rel="stylesheet" href="css/swiper-bundle.min.css">-->                                  <!-- Swiper style -->

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/css/slider.css">


</head>

<body>
    <div class="tm-header">
        <div class="container-fluid">
            <div class="tm-header-inner">
                <a href="#" class="navbar-brand tm-site-name">PeOne</a>

                <!-- navbar -->
                <nav class="navbar tm-main-nav">

                    <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse" data-target="#tmNavbar">
                        &#9776;
                    </button>

                    <div class="collapse navbar-toggleable-sm" id="tmNavbar">
                        <ul class="nav navbar-nav">
                            <li class="nav-item active">
                                <a href="/Home/Home" class="nav-link">Home</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Medici/Lista" class="nav-link">Medici</a>
                            </li>
                            <li class="nav-item">
                                <a href="/Ospedali/ListaOspedali" class="nav-link">Ospedali</a>
                            </li>
                        </ul>
                    </div>

                </nav>
            </div>
        </div>
    </div>

    <div class="tm-home-img-container">
        <img src="" alt="Image" class="hidden-lg-up img-fluid">
    </div>

    <div class="my-3"></div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-xs-center">
                <h2 class="tm-gold-text tm-title">I nostri migliori medici </h2>
                <p class="tm-subtitle">Conosci i professionisti che fanno la differenza nelle nostra strutture.</p>
            </div>
        </div>
    </div>

    <div class="bodySlider">
        <div class="container swiper">
            <div class="slider-wrapper">
                <div class="card-list swiper-wrapper">

                    <!-- lista dei top 10 o 20 medici -->
                    @{
                        foreach (var medico in @Model)
                        {
                            <div class="card-item swiper-slide">
                                <img src="https://static.wikia.nocookie.net/joke-battles/images/d/df/Gigachad.png" alt="Medico" class="user-image">
                                <h2 class="user-name">@medico.Nome @medico.Cognome</h2>
                                <a href="/Medici/Dettagli/@medico.Id">
                                    <button class="message-button">Dettagli</button>
                                </a>
                            </div>
                        }
                    }
                </div>

                <div class="swiper-pagination"></div>
                <div class="swiper-slide-button swiper-button-prev"></div>
                <div class="swiper-slide-button swiper-button-next"></div>
            </div>
        </div>

    </div>

    <footer class="tm-footer">
        <div class="container-fluid">
            <div class="riga">

                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 col-xl-3">

                    <div class="tm-footer-content-box">
                        <h3 class="tm-gold-text tm-title tm-footer-content-box-title">PeOne </h3>
                        <div class="tm-gray-bg">
                            <p>Lavoro di gruppo:</p>
                            <p>Simone, Matteo, Paolone, Luca, Riccardo, Gennà</p>

                        </div>
                    </div>

                </div>


                <div class="clearfix hidden-lg-up"></div>

                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 col-xl-3">

                    <div class="tm-footer-content-box">

                        <h3 class="tm-gold-text tm-title tm-footer-content-box-title">I nostri Principi </h3>
                        <p class="tm-margin-b-30">Il rispetto del paziente è il fondamento di un'etica medica intesa come nuova pietas finalizzata al bene altrui.</p><hr class="tm-margin-b-30">
                        <p class="tm-margin-b-30">D'un tratto vidi chiaro: la medicina era una scienza vivente! [...] vivente in Dio; giacché la vita non era pensabile per me fuori di Lui.</p><hr class="tm-margin-b-30">
                        <p class="tm-margin-b-30">Della medicina, [...], tutto si può dire tranne che sia una scienza esatta.</p>
                        <a href="https://it.wikiquote.org/wiki/Medicina" class="tm-btn tm-btn-gray text-uppercase">Leggi Altro</a>

                    </div>

                </div>

                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 col-xl-3">

                    <div class="tm-footer-content-box">

                        <h3 class="tm-gold-text tm-title tm-footer-content-box-title">CONI </h3>
                        <div class="tm-margin-b-30">
                            <img src="https://static.tecnichenuove.it/medicinaintegratanews/2022/06/future-health-index.jpeg" alt="Image" class="tm-footer-thumbnail">
                            <img src="https://i.redd.it/biv9yinv81m11.jpg" alt="Image" class="tm-footer-thumbnail">
                            <img src="https://www.regione.lombardia.it/wps/wcm/connect/644ba34e-138e-4a09-b960-ae2af8ef8b14/aset-social-medicina-generale.jpg?MOD=AJPERES" alt="Image" class="tm-footer-thumbnail">
                            <img src="https://uniperte.info/wp-content/uploads/2021/02/specialistica-medicina.jpeg" alt="Image" class="tm-footer-thumbnail">
                            <img src="https://artuk.org/download/benito-mussolini-18831945-252025" alt="Image" class="tm-footer-thumbnail">
                            <img src="https://www.coni.it/images/medicina/slide/Medicina-9.jpg" alt="Image" class="tm-footer-thumbnail">
                        </div>
                        <p class="tm-margin-b-20">Il Comitato olimpico nazionale italiano o CONI è l'organismo di governo dello sport in Italia.</p>
                        <a href="https://www.coni.it/it/medicina-dello-sport.html" class="tm-btn tm-btn-gray text-uppercase">Visita il Sito</a>

                    </div>

                </div>


            </div>

            <div class="row">
                <div class="col-xs-12 tm-copyright-col">
                    <p class="tm-copyright-text">Copyright Nebula Studios </p>
                </div>
            </div>
        </div>
    </footer>


<!-- Linking custom script -->
<script src="~/js/slider.js"></script>
</body>


</html>
