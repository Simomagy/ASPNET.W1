@using HotPork.Models
@model MSSTU.DB.Utility.Entity

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Dettagli @((Panino)Model).Nome</title>
</head>
<body>
<div class="d-flex w-100 h-100 justify-center align-center">
    <div class="card d-flex w-100 justify-center flex-col align-center gap-3">
        <div class="card-header text-body-subtle w-100">
            <i class="ti ti-book-2"></i>
            @(((Panino)Model).Nome)
        </div>
        <div class="d-flex w-100 h-100 justify-center align-center">
            <img class="rounded" src="@(((Panino)Model).Immagine)" alt="@(((Panino)Model).Nome)" />
        </div>
        <div class="card-body text-center">
            <div class="tag-group">
                <div class="tag">Extra: </div>
                <div class="tag-text">@(((Panino)Model).Extra)</div>
            </div>
            <p class="text-body-subtle">@(((Panino)Model).Descrizione)</p>
        </div>
        <a class="card-footer w-100 hover-secondary d-flex align-center justify-center"
           href="/Menu/Lista">
            <i class="ti ti-chevrons-left me-2"></i>
            Indietro
        </a>
    </div>
</div>
</body>
</html>
